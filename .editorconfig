root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{js,jsx,json,ts,tsx,html,css,conf,yml,yaml,md,tf,xml}]
indent_size = 2

[*.{md,mdx}]
trim_trailing_whitespace = false
indent_size = 2
indent_style = space
